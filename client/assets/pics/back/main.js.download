var animationmoves = 0;
function animatepokemonright(){
    while(animationmoves<500){
        $('div.pokemon1img').animate({left: '+=15px'}, 1000);
        $('div.pokemon2img').animate({left: '-=7px'}, 1000);
        animationmoves++;
        animatepokemonleft();
    };
};
function animatepokemonleft(){
    while(animationmoves<500){
        $('div.pokemon1img').animate({left: '-=15px'}, 1000);
        $('div.pokemon2img').animate({left: '+=7px'}, 1000);
        animationmoves++;
        animatepokemonright();
    }
        
};

